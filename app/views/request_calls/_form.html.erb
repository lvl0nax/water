<%= simple_form_for(@request_call) do |f| %>
  <%= f.error_notification %>
  <div id="close">X</div>
  <div class="form-inputs">
    <%= f.input :phone, :label => "Телефон" %>
    <div class="for_clear"></div>
    <%= f.input :name, :label => "Как к вам обратиться?" %>
    <div class="for_clear"></div>
    <%= f.input :comment, :label => "Комментарий" %>
    <div class="for_clear"></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :value => "Заказать" %>
  </div>
<% end %>
