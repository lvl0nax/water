<%= simple_form_for(@accessory) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :seotitle %>
    <%= f.input :seodesc %>
    <%= f.input :seokeywords %>
    <%= f.input :title %>
    <%= f.input :description, :as => :ckeditor, :label => false, :input_html => { :toolbar => 'Full' } %>
    <%= f.input :availability %>
    <%= f.input :price %>
    <%= f.input :photo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
