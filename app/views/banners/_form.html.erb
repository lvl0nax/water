<div class="hlptxt">
  <%= simple_form_for(@banner) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :image %>
      <%= f.input :name, label: 'Название' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Создать' %>
    </div>
  <% end %>
</div>
