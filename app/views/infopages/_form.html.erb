<%= simple_form_for(@infopage) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :seotitle %>
    <%= f.input :seodesc %>
    <%= f.input :seokeywords %>
    <%= f.input :h1 %>
    <%= f.input :title %>
    <%= f.input :description, :as => :ckeditor, :label => false, :input_html => { :toolbar => 'Full' }%>
    <%= f.input :tag %>
    <%= f.input :top %>
    <%= f.input :column %>
    <%= f.input :url %>
    <%= f.input :parent_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
