<div class="hlptxt">
  <%= simple_form_for(@helptext) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :tag %>
      <%= f.input :name, label: 'Название' %>
      <%= f.input :content, label: 'Содержание', as: :ckeditor, label: false, input_html: {toolbar: 'Full'} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Создать' %>
    </div>
  <% end %>
</div>
