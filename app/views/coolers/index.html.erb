



<% @coolers.each do |cooler| %>
  <div class="cooler cborder">
    <%=image_tag cooler.photo.spec_offer.url, :alt => "#{cooler.title}" %>
    
  <div class="c-title">
    <%= cooler.title %>
  </div>
    

    <table class="cooler-table">
        <tr>
          <td>Тип конструкции</td>
          <td><%= cooler.constructiontype %></td>
        </tr>
        <tr>
          <td class="white">Цвет</td>
          <td class="white"><%= cooler.color %></td>
        </tr>
        <tr>
        <tr>
          <td>Тип охлаждения</td>
          <td><%= cooler.coolingtype %></td>
        </tr>
        <tr>
          <td class="white">Нагрев</td>
          <td class="white"><%= cooler.heatingtime %>л/ч (~<%= cooler.heatingtemprature%>C)</td>
        </tr>
        <tr>
        <td>Охлаждение</td>
          <td><%= cooler.coolingtime %>л/ч (~<%= cooler.coolingtemprature%>C)</td>
        </tr>
        <td class="white">Габариты (ш*г*в)</td>
          <td class="white"><%= cooler.width %> x <%= cooler.long %> x <%= cooler.height %> мм</td>
        </tr>
        <tr>
          <td>Наличие</td>
          <td><%= cooler.availability %>

          </td>
        </tr>
        

    </table>
    <br>

    <div class="price"> 
      <%= cooler.price %>
    </div>

    <div class="more"> 
      <%= link_to 'Подробнее', cooler %>
    </div>
    <div class="more"> 
      <%= image_tag "r.png" %>
    </div>


    <div class="for_clear"></div>
    
    <% if current_user.try(:isAdmin?)   %>
        <%= link_to 'Edit', edit_cooler_path(cooler) %>
        <%= link_to 'Destroy', cooler, confirm: 'Are you sure?', method: :delete %>
    <% end %>
  </div>

<% end %>
