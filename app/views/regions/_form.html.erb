<%= simple_form_for(@region) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :seotitle %>
    <%= f.input :seodesc %>
    <%= f.input :seokeywords %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :mon %>
    <%= f.input :tue %>
    <%= f.input :wed %>
    <%= f.input :thu %>
    <%= f.input :fri %>
    <%= f.input :sat %>
    <%= f.input :sun %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
